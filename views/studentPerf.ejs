        <script>
        document.addEventListener("DOMContentLoaded", function() {
          const monthButtons = document.querySelectorAll('.btn.btn-simple');
      
          monthButtons.forEach(function(button, index) {
              button.addEventListener('click', function() {
                  generateCalendar(index);
              });
          });
      
          function generateCalendar(month, highlightedDates) {
              const calendarBody = document.getElementById("calendarBody");
              calendarBody.innerHTML = "";
      
              const today = new Date();
              const currentYear = today.getFullYear();
      
              const firstDayOfMonth = new Date(currentYear, month, 1);
              const lastDayOfMonth = new Date(currentYear, month + 1, 0);
              const daysInMonth = lastDayOfMonth.getDate();
      
              let dateCounter = 1;
              let row = document.createElement("tr");
      
              for (let i = 0; i < firstDayOfMonth.getDay(); i++) {
                  const emptyCell = document.createElement("td");
                  row.appendChild(emptyCell);
              }
      
              for (let i = 1; i <= daysInMonth; i++) {
                  const cell = document.createElement("td");
                  cell.textContent = i;
      
                  // Highlight today's date
                  if (currentYear === today.getFullYear() && month === today.getMonth() && i === today.getDate()) {
                      cell.classList.add("today");
                  }
      
                  // Check if the date should be highlighted
                  if (highlightedDates.includes(i)) {
    cell.classList.add("highlighted-date");
}
      
                  row.appendChild(cell);
      
                  if ((firstDayOfMonth.getDay() + i) % 7 === 0 || i === daysInMonth) {
                      calendarBody.appendChild(row);
                      row = document.createElement("tr");
                  }
              }
          }
          const highlightedDates = <%- JSON.stringify(activitydate) -%>;
          //const highlightedDates=['10','12'];
          generateCalendar(3, highlightedDates); 
      });
      
    </script>
       
      
